#page {
	/*
		сетка
	*/
	display:				grid;
	grid-template-areas:	"head head" "nav memo";
	grid-gap:				1rex;
	overflow:				auto;
	justify-content:		flex-start;
	border: 2px;
	/*
		https://developer.mozilla.org/en-US/docs/Web/CSS/grid-template
	*/
	grid-template-rows:		50px 1fr;
	grid-template-columns:	1fr auto;
	width:					auto;/*	ширина */
	/*
		отступы
	*/
	padding:				1ex;
	margin:					0px;
	/*
		шрифт
	*/
	font-size:				var(--font-size);
	font-family:			var(--font-family);
	line-height:			1;
	/*
		цвета
	*/
	color:					#000;
	background-color:		hsl(0,0%,95%);
}
#page > header
{
	grid-area:				head;
	background-color:		#8ca0ff;
}
#page > nav
{
	grid-area:				nav;
	background-color: 		ffa08c;
}

#page > main
{
	grid-area:				memo;
	background-color:		#ffff64;
}
/****************************************************************************/
h1,h2
{
	padding: 2px;
	margin: 0px;
	font-family:	var(--font-family);
	font-weight:	400;
	font-style:		normal;
	font-size:		20px;
	line-height:	1;
}
h2
{
	font-size:		16px;
}
/*
	Таблицы
*/
table.db-table
{
	display: 			table;
	table-layout:		fixed;
	0width:				100%;

	font-family:		var(--font-family);
	font-size:			14px;
	line-height:		1.5;
	
	border-collapse:	collapse;
}
/*	Название таблицы */
table.db-table caption
{
	font-weight:		bold;

	caption-side:		top;
	
	margin:				0;
	padding:			1rem;
}
table.db-table caption,
table.db-table th,
table.db-table td
{
	text-align:			left;
}
table.db-table tr
{
	cursor:				pointer;
}
/*	выделение строки при наведении курсора */
table.db-table tr:hover
{
	background-color:	hsla(215,80%,90%,0.5);
}
/*	содержание ячеек таблиц */
table.db-table th,
table.db-table td
{
	font-family:		inherit;
	font-size:			inherit;
	vertical-align:		text-top;
	margin:				0;
	padding:			1rex;
}
/*	Заголовки столбцов */
table.db-table th
{
	font-weight:		bold;
	white-space:		nowrap;
	
	padding-top:		1rem;
	padding-bottom:		1rem;
	
	border-bottom:		var(--border-table);
	
	background:			hsl(0,0%,90%);
}
/*	Текст в ячейке */
table.db-table td
{
	font-weight:		normal;
	border-bottom:		var(--border-table);
	color:				#000;
}
