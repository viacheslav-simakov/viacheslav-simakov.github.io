.material-symbols {
	font-family:	"Material Symbols Outlined";
	font-weight:	normal;
	font-style:		normal;
	font-size:		48px;  /* Preferred icon size */
	display:		inline-block;
	line-height:	1;
	text-transform:	none;
	letter-spacing:	normal;
	word-wrap:		normal;
	white-space:	nowrap;
	direction:		ltr;
	font-variation-settings:
	'FILL' 0,
	'wght' 400,
	'GRAD' 0,
	'opsz' 20
}
/*	CSS-переменные */
:root {
	--color-blue: hsl(215,100%,50%);
	--font-family: "Ubuntu", sans-serif;
	--font-size: 14px;
	--navigation-background-color: 			hsl(0,0%,95%);
	--navigation-background-color-hover:	hsl(0,0%,90%);
	--navigation-border-color: 				hsl(0,0%,75%);
	--navigation-border: 1px solid var(--navigation-border-color);
	--body-background-color: hsl(0,0%,100%);
}
html {
	font-size:		var(--font-size);
	font-family:	var(--font-family);
	line-height:	1;
}
body
{
	margin:				12px;
	padding:			8px 8px;	
	font-family:		var(--font-family);
	font-size:			var(--font-size);
	background-color:	var(--body-background-color);
	overflow:			scroll;	/*	overflow: scroll;  Show scrollbars */
/*	width: 100%;*/
}
.material-symbol
{
	font-size:		24px;
	font-family:	"Material Symbols Outlined";
	font-weight:	normal;
}
